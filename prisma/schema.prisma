generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Attendee {
  id      String @unique
  name    String
  eventId Int

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@map("attendee")
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  author    String?  @default("Anonymous")
  published Boolean  @default(false)
  content   String
  createdAt DateTime @default(now())

  @@map("news")
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  flyer       String?
  capacity    Int?
  fee         Float?    @default(0)
  endDate     DateTime?
  location    String
  createdAt   String

  attendees Attendee[]

  @@map("events")
}
