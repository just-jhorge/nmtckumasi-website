generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String
  author    String?  @default("Anonymous")
  published Boolean  @default(false)
  content   String
  createdAt DateTime @default(now())

  @@map("news")
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  flyer       String?
  capacity    Int?
  fee         Float?    @default(0)
  endDate     DateTime?
  location    String
  createdAt   String

  @@map("events")
}

model Interview {
  id   Int      @id @default(autoincrement())
  pin  String   @unique
  name String
  date DateTime

  @@map("interview_dates")
}
